import random
Hero=int(100)
Magician=int(200)
Enemy=int(300)
Attack_Superb=int(50)
Attack_Strong=int(30)
Attack_Normal=int(10)
def subtract(x,y):
    return x-y

print("Welcome to Game Hero")
print("Please choose your character")
print("Are you a Hero")
print("or")
print("Are you a Magician?")
def fight():
    print("You are now facing a Enemy")
    while Enemy != 0:
        pilih = input("Choose your attack type(Superb/Strong/Normal")
        if pilih == "Superb":
            print(subtract(Enemy, Attack_Superb))
        elif pilih == "Strong":
            print (subtract(Enemy,Attack_Strong))
        elif pilih == "Normal":
            print (subtract(Enemy,Attack_Normal))
    
def main():
    choice = input ("Choose Your Character :")
    if choice == 'Hero':
        print("You are a hero!")
    elif choice == "Magician":
        print("You are a Magician!")
    fight()
main()
